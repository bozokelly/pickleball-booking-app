{
  "expo": {
    "name": "Pickleball Booking",
    "slug": "pickleball-booking",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pickleball",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.pickleballbooking",
      "infoPlist": {
        "NSCalendarsUsageDescription": "We need access to your calendar to add game events.",
        "NSCalendarsFullAccessUsageDescription": "We need access to your calendar to add game events."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "package": "com.yourname.pickleballbooking",
      "permissions": ["CALENDAR", "READ_CALENDAR", "WRITE_CALENDAR"]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#007AFF"
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "Allow Pickleball Booking to access your calendar to add game events."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
